<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Square Product Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgProductSquare"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/product01"
                android:layout_marginBottom="12dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Round"/>

            <TextView
                android:id="@+id/tvProductNameSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/bold"
                android:text="Orchid Divine"
                android:textColor="#E85C7A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductDescSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vani &amp; Strawberry"
                android:textColor="#888888"
                android:textSize="14sp"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvProductPriceSquare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.000 đ"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/semibold"/>

                <TextView
                    android:id="@+id/tvProductDiscountSquare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10% off"
                    android:textColor="#E3171A"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:background="#FDE8E8"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvProductOldPriceSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="550.000 đ"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="@font/regular"
                android:layout_marginBottom="8dp"
                android:background="@drawable/striketext"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right|end">

                <ImageButton
                    android:id="@+id/btnAddToCartSquare"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_cart_64"
                    android:background="@color/white"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Click this to add your product into your cart!"/>

                <ImageButton
                    android:id="@+id/btnFavoriteSquare"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Click this to add the product into your wishlist!"
                    android:background="@color/white"
                    android:src="@drawable/ic_favourite_64" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Horizontal Product Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgProductHorizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/product01"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductNameHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orchid Divine"
                    android:textColor="#E85C7A"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tvProductDescHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vani &amp; Strawberry"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvProductPriceHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500.000 đ"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/semibold"/>

                    <TextView
                        android:id="@+id/tvProductDiscountHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10% off"
                        android:textColor="#E3171A"
                        android:textSize="14sp"
                        android:fontFamily="@font/bold"
                        android:background="#FDE8E8"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProductOldPriceHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="550.000 đ"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/striketext"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnAddToCartHorizontal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_cart_64"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Click this to add your product into your cart!"/>

                <ImageButton
                    android:id="@+id/btnFavoriteHorizontal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_favourite_64"
                    android:contentDescription="Click this to add the product into your wishlist!"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>