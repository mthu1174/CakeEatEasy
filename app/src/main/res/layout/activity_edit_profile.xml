<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".screens.EditProfileActivity">

    <!-- 1. App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/product_list_app_bar_bg"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:navigationIconTint="@color/white"
        app:title="Edit profile"
        app:titleCentered="true"
        app:titleTextColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- 2. Ảnh đại diện và nút sửa -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_avatar_edit"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_cake_promo"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                    app:strokeColor="@color/home_pink"
                    app:strokeWidth="2dp" />
                <ImageView
                    android:id="@+id/btn_change_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/icon_circle_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/home_pink"/>
            </FrameLayout>

            <!-- 3. Các ô nhập liệu -->
            <!-- Full name -->
            <TextView style="@style/EditProfileLabel" android:text="Full name"/>
            <EditText
                android:id="@+id/edt_full_name"
                style="@style/EditProfileEditText"
                android:hint="Lois Becket"
                android:inputType="textPersonName"/>

            <!-- Date of birth -->
            <TextView style="@style/EditProfileLabel" android:text="Date of birth"/>
            <EditText
                android:id="@+id/edt_dob"
                style="@style/EditProfileEditText"
                android:drawableStart="@drawable/ic_calendar"
                android:focusable="false"
                android:clickable="true"
                android:hint="18/03/2024"/>

            <!-- Phone Number -->
            <TextView style="@style/EditProfileLabel" android:text="Phone Number"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background">
                <!-- Country Code Picker (Thư viện ngoài) -->
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showFullName="false"
                    app:ccp_arrowSize="20sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp"/>
                <EditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingHorizontal="16dp"
                    android:inputType="phone"
                    android:hint="(454) 726-0592"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Nút Save Changes -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/logout_button_background"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:textAllCaps="false"/>
</LinearLayout>