<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".screens.EditProfileActivity">

    <!-- 1. App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_pink"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:navigationIconTint="@color/white"
        app:title="Edit profile"
        app:titleCentered="true"
        app:titleTextColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- 2. Ảnh đại diện và nút sửa -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_avatar_edit"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_cake_promo"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                    app:strokeColor="@color/app_pink"
                    app:strokeWidth="2dp" />
                <ImageView
                    android:id="@+id/btn_change_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/icon_circle_background"
                    android:backgroundTint="@color/app_pink_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/app_pink"/>
            </FrameLayout>

            <!-- 3. Các ô nhập liệu -->

            <!-- Full name -->
            <TextView style="@style/EditProfileLabel" android:text="Full name"/>
            <EditText
                android:id="@+id/edt_full_name"
                style="@style/EditProfileEditText"
                android:hint="Nha Linh Nguyen"
                android:inputType="textPersonName"/>

            <!-- Email (Không cho sửa) -->
            <TextView style="@style/EditProfileLabel" android:text="Email"/>
            <TextView
                android:id="@+id/txt_email"
                style="@style/EditProfileEditText"
                android:backgroundTint="@color/text_muted"
                android:focusable="false"
                android:clickable="false"
                android:padding="16dp"
                tools:text="linhnhanguyen@gmail.com"/>

            <!-- Username (Không cho sửa) -->
            <TextView style="@style/EditProfileLabel" android:text="Username"/>
            <TextView
                android:id="@+id/txt_username"
                style="@style/EditProfileEditText"
                android:backgroundTint="@color/text_muted"
                android:focusable="false"
                android:clickable="false"
                android:padding="16dp"
                tools:text="linhnhanguyen" />

            <!-- Date of birth -->
            <TextView style="@style/EditProfileLabel" android:text="Date of birth"/>
            <EditText
                android:id="@+id/edt_dob"
                style="@style/EditProfileEditText"
                android:drawableStart="@drawable/ic_calendar"
                android:focusable="false"
                android:clickable="true"
                android:hint="dd/mm/yyyy"/>

            <!-- Phone Number -->
            <TextView style="@style/EditProfileLabel" android:text="Phone Number"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_background">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showFullName="false"
                    app:ccp_arrowSize="20dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp"/>
                <EditText
                    style="@style/EditProfileEditText"
                    android:id="@+id/edt_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingHorizontal="16dp"
                    android:inputType="phone"/>
            </LinearLayout>

            <!-- Address -->
            <TextView style="@style/EditProfileLabel" android:text="Address"/>
            <EditText
                android:id="@+id/edt_address_detail"
                style="@style/EditProfileEditText"
                android:inputType="textPostalAddress"
                android:minHeight="80dp"
                android:gravity="top"
                android:hint="Your full address"/>

        </LinearLayout>
    </ScrollView>

    <!-- Nút Save Changes -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_changes"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Save Changes" />
</LinearLayout>