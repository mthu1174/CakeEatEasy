<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_pink_background"
    tools:context=".screens.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- ============================================= -->
            <!-- KHỐI WELCOME & SEARCH BAR MỚI ĐƯỢC THÊM VÀO  -->
            <!-- ============================================= -->

            <TextView
                android:id="@+id/txt_welcome_message"
                style="@style/TextAppearance.App.Body1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/home_padding_horizontal"
                android:text="Welcome back,"
                android:textColor="@color/home_text_secondary" />

            <TextView
                android:id="@+id/txt_welcome_user"
                style="@style/TextAppearance.App.Heading1"
                android:layout_marginHorizontal="@dimen/home_padding_horizontal"
                tools:text="Nha Linh!" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/home_padding_horizontal"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">
                    <ImageView
                        android:id="@+id/img_search_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_muted" />
                    <EditText
                        android:id="@+id/edt_search"
                        style="@style/TextAppearance.App.Body2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text_normal"
                        android:textColorHint="@color/text_muted" />
                    <ImageView
                        android:id="@+id/img_filter_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_filter"
                        app:tint="@color/text_dark" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- ============================================= -->
            <!-- BANNER CŨ ĐƯỢC THAY THẾ BẰNG KHỐI SLIDER MỚI -->
            <!-- ============================================= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <!-- 1. ViewPager2 giữ nguyên, nhưng có padding đối xứng -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="@dimen/home_padding_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 2. THAY THẾ TabLayout bằng LinearLayout -->
                <LinearLayout
                    android:id="@+id/layout_dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/view_pager_banner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Collection Section -->
            <TextView
                style="@style/TextAppearance.App.Heading2"
                android:text="Collection"
                android:textColor="@color/app_pink"
                android:layout_marginTop="@dimen/home_section_margin_top"
                android:layout_marginStart="@dimen/home_padding_horizontal"/>/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_collections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/home_padding_horizontal"
                tools:listitem="@layout/item_category"/>

            <!-- Today Promo Section -->
            <TextView
                style="@style/TextAppearance.App.Heading2"
                android:text="Today Promo"
                android:textColor="@color/app_pink"
                android:layout_marginTop="@dimen/home_section_margin_top"
                android:layout_marginStart="@dimen/home_padding_horizontal"/>/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/home_padding_horizontal"
                tools:listitem="@layout/item_promo_product"/>

            <!-- Hot Voucher Section -->
            <TextView
                style="@style/TextAppearance.App.Heading2"
                android:text="Hot Voucher"
                android:textColor="@color/app_pink"
                android:layout_marginTop="@dimen/home_section_margin_top"
                android:layout_marginStart="@dimen/home_padding_horizontal"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_vouchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp"

                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:spanCount="2"
                tools:listitem="@layout/item_grid_voucher"
                tools:itemCount="4"/>

        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>