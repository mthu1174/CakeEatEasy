<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_nav_container_height"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_bar_height"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_background"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">

        <include android:id="@+id/nav_home" layout="@layout/item_bottom_nav" />
        <include android:id="@+id/nav_order" layout="@layout/item_bottom_nav" />
        <include android:id="@+id/nav_favourite" layout="@layout/item_bottom_nav" />
        <include android:id="@+id/nav_notification" layout="@layout/item_bottom_nav" />
        <include android:id="@+id/nav_profile" layout="@layout/item_bottom_nav" />

    </LinearLayout>
</FrameLayout>