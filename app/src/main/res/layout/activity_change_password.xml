<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".screens.ChangePasswordActivity">

    <!-- 1. App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/product_list_app_bar_bg"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:navigationIconTint="@color/white"
        app:title="Change password"
        app:titleCentered="true"
        app:titleTextColor="@color/white"/>

    <!-- Sử dụng ScrollView để đảm bảo không bị lỗi overflow trên các màn hình nhỏ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 2. Ô nhập New Password -->
            <TextView style="@style/EditProfileLabel"
                android:text="New password"
                android:textColor="@color/text_light"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:inputType="textPassword"
                    android:hint="........." />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 3. Ô nhập Confirm Password -->
            <TextView style="@style/EditProfileLabel"
                android:text="Confirm password"
                android:textColor="@color/text_light"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:inputType="textPassword"
                    android:hint="........." />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spacer để đẩy nút Confirm xuống dưới -->
            <Space
                android:layout_width="0dp"
                android:layout_height="32dp"/>

            <!-- 4. Nút Confirm -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                style="@style/TextAppearance.App.Body3.Medium"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/logout_button_background"
                android:text="Confirm"
                android:textColor="@color/app_pink_background"
                android:textAllCaps="false"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>