<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    android:background="#FBEAEC">

    <CheckBox
        android:id="@+id/checkbox"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/product01"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E85C7A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/bold"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:focusable="false"
            android:cursorVisible="false"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/edt_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/semibold"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:singleLine="true"
                android:focusable="false"
                android:cursorVisible="false"/>

            <EditText
                android:id="@+id/edt_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E3171A"
                android:textSize="14sp"
                android:fontFamily="@font/bold"
                android:background="#FDE8E8"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginStart="8dp"
                android:inputType="text"
                android:singleLine="true"
                android:focusable="false"
                android:cursorVisible="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/btn_decrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_decrease_quantity_1"
                android:contentDescription="Decrease" />

            <EditText
                android:id="@+id/edt_quantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/cakeiteasy_pink"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/semibold"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:singleLine="true"
                android:focusable="false"
                android:cursorVisible="false"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/btn_increase"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_increase_quantity_1"
                android:contentDescription="Increase" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 