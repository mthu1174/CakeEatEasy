<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".screens.OrderActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_pink"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:navigationIconTint="@color/white"
        app:title="Order History"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.App.Heading3"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/icon_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_shopping_cart"
            app:tint="@color/white" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Include component Tab bạn đã tạo -->
    <include layout="@layout/component_order_tabs" />

    <!-- RecyclerView để hiển thị danh sách đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_order"/>

</LinearLayout>