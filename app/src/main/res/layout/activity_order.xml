<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".screens.OrderActivity">

    <!-- Toolbar (Giữ nguyên) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_pink"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:navigationIconTint="@color/white"
        app:title="Order History"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.App.Heading3"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/icon_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_shopping_cart"
            app:tint="@color/white" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Include component Tab bạn đã tạo (Giữ nguyên) -->
    <include layout="@layout/component_order_tabs" />


    <!-- BƯỚC 1: SỬ DỤNG FRAMELAYOUT ĐỂ CHỨA CẢ RECYCLERVIEW VÀ TEXTVIEW -->
    <!-- FrameLayout sẽ chiếm toàn bộ không gian còn lại -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RecyclerView để hiển thị danh sách đơn hàng (Nằm ở lớp dưới) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            tools:listitem="@layout/item_order"/>

        <!-- BƯỚC 2: THÊM TEXTVIEW CHO TRẠNG THÁI RỖNG (Nằm ở lớp trên) -->
        <TextView
            android:id="@+id/txt_order_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bạn chưa có đơn hàng nào"
            android:textColor="@color/text_light"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:drawableTop="@drawable/ic_order_history"
            android:drawablePadding="16dp"
            app:drawableTint="@color/text_light" />

    </FrameLayout>

</LinearLayout>