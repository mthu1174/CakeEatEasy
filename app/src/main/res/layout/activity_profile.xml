<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".screens.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Khối thông tin người dùng -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/home_pink"
                app:strokeWidth="1dp"
                app:cardElevation="0dp">

                <!-- ============================================= -->
                <!-- THAY THẾ NỘI DUNG BÊN TRONG BẰNG KHỐI NÀY -->
                <!-- ============================================= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- 1. Ảnh đại diện -->
                    <!-- SỬ DỤNG ShapeableImageView CỦA GOOGLE -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_cake_promo"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Circle"
                        app:strokeColor="@color/home_pink"
                        app:strokeWidth="1dp" />

                    <!-- 2. Khu vực text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Linh Nha Nguyen"
                            android:textColor="@color/home_pink"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="linhnhanguyen@gmail.com"
                            android:textColor="@color/home_text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 3. Mũi tên bên phải -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right" />

                </LinearLayout>
                <!-- ============================================= -->

            </com.google.android.material.card.MaterialCardView>

            <!-- 2. Nút Payments & Purchases -->
            <!-- Bọc include trong một FrameLayout và đặt ID cho FrameLayout -->
            <com.finalterm.cakeeateasy.screens.ProfileOptionView
                android:id="@+id/option_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginVertical="16dp"/>


            <!-- 3. Nhóm Setting & Preferences -->
            <TextView style="@style/TextAppearance.App.Body2.Bold"
                android:text="Setting and Preferences"
                android:textColor="@color/text_light"/>
            <com.finalterm.cakeeateasy.screens.ProfileOptionView
                android:id="@+id/option_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <com.finalterm.cakeeateasy.screens.ProfileOptionView
                android:id="@+id/option_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <com.finalterm.cakeeateasy.screens.ProfileOptionView
                android:id="@+id/option_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <com.finalterm.cakeeateasy.screens.ProfileOptionView
                android:id="@+id/option_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginVertical="16dp"/>

            <!-- 4. Nhóm Support -->
            <TextView style="@style/TextAppearance.App.Body2.Bold"
                android:text="Support"
                android:textColor="@color/text_light"/>
            <com.finalterm.cakeeateasy.screens.ProfileOptionView
                android:id="@+id/option_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <!-- 5. Nút Log out -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="8dp"
                android:paddingStart="24dp"
                android:gravity="center_vertical|start"
                android:background="@drawable/logout_button_background"
                android:text="Log out"
                android:textColor="@color/app_pink_background"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:drawableTint="@color/white"
                style="@style/TextAppearance.App.Body2.Bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>