<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.ProductDetailsActivity">
    <!-- Header Bar -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/cakeiteasy_pink"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back_2"
            android:contentDescription="Back" />

        <EditText
            android:id="@+id/edt_product_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/semibold"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:focusable="false"
            android:cursorVisible="false" />

        <FrameLayout
            android:id="@+id/cart_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_cart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_cart_2"
                android:contentDescription="Cart"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/cart_badge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end|top"
                android:background="@drawable/badge_background"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone"
                android:text="0"/>
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="1dp">

                <!-- Image Carousel (replace with ViewPager2 for real carousel) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:id="@+id/img_product_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_cake_promo" />
                    <!-- Carousel Dots -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="8dp">
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/ic_selected_dot" android:layout_margin="2dp" />
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/ic_dot_unselected" android:layout_margin="2dp" />
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/ic_dot_unselected" android:layout_margin="2dp" />
                        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/ic_dot_unselected" android:layout_margin="2dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Thumbnails -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/img_product_1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/placeholder_cake_promo" />

                    <ImageView
                        android:id="@+id/img_product_2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/placeholder_cake_promo" />

                    <ImageView
                        android:id="@+id/img_product_3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/placeholder_cake_promo" />
                </LinearLayout>
            </LinearLayout>

            <!-- Product Info -->
            <EditText
                android:id="@+id/edt_product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:singleLine="true"
                android:focusable="false"
                android:cursorVisible="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/edt_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/cakeiteasy_pink"
                    android:textSize="22sp"
                    android:fontFamily="@font/bold"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusable="false"
                    android:cursorVisible="false" />
                <ImageView
                    android:id="@+id/btn_favorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_fav"
                    android:layout_marginRight="20dp"
                    android:contentDescription="Favorite" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/regular"
                android:textColor="#888888"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:maxLines="10"
                android:focusable="false"
                android:cursorVisible="false" />

            <!-- Price, Discount, Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/edt_product_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="20sp"
                    android:fontFamily="@font/bold"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusable="false"
                    android:cursorVisible="false" />

                <EditText
                    android:id="@+id/edt_product_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@color/coupon_grey_text"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:fontFamily="@font/regular"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/edt_discount_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DD5369"
                    android:textSize="14sp"
                    android:fontFamily="@font/semibold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="20dp"
                    android:background="#FBEAEC"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusable="false"
                    android:cursorVisible="false" />
            </LinearLayout>

            <!-- Quantity Selector -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/btn_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_decrease_quantity_1"
                    android:contentDescription="Decrease" />
                <EditText
                    android:id="@+id/edt_quantity_picker"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/cakeiteasy_pink"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/semibold"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusable="false"
                    android:cursorVisible="false" />
                <ImageView
                    android:id="@+id/btn_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_increase_quantity_1"
                    android:contentDescription="Increase" />
            </LinearLayout>

            <!--Button-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <Button
                    android:id="@+id/btn_add_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FBEAEC"
                    android:fontFamily="@font/bold"
                    android:text="Add to cart"
                    android:layout_marginStart="20dp"
                    android:textColor="#DD5369"
                    android:textSize="18dp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/btn_buy_now"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DD5369"
                    android:fontFamily="@font/bold"
                    android:text="Buy now"
                    android:textColor="#FBEAEC"
                    android:textSize="18dp"
                    app:cornerRadius="0dp" />

                <ImageView
                    android:id="@+id/img_chat_with_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_chat_with_shop" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bold"
                android:text="Size"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_size_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/regular"
                android:textColor="#888888"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:singleLine="true"
                android:focusable="false"
                android:cursorVisible="false" />

            <TextView
                android:id="@+id/txt_usage_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bold"
                android:text="Usage instruction"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_usage_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/regular"
                android:textColor="#888888"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:maxLines="10"
                android:focusable="false"
                android:cursorVisible="false" />


            <TextView
                android:id="@+id/txt_included_accessories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bold"
                android:text="Included accessories"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_included_accessories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/regular"
                android:textColor="#888888"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:scrollHorizontally="false"
                android:maxLines="10"
                android:focusable="false"
                android:cursorVisible="false" />





            <!-- Title -->
            <TextView
                android:id="@+id/txt_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/bold"
                android:text="Review"
                android:textColor="@color/cakeiteasy_pink"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- CardView for review -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Stars -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_star_1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />
                    </LinearLayout>

                    <!-- Review Title -->
                    <EditText
                        android:id="@+id/edt_title_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/bold"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:singleLine="true"
                        android:focusable="false"
                        android:cursorVisible="false" />

                    <!-- Review Content -->
                    <EditText
                        android:id="@+id/edt_review_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:scrollHorizontally="false"
                        android:maxLines="10"
                        android:focusable="false"
                        android:cursorVisible="false" />

                    <!-- Reviewer Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F7D4D8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_avatar" />

                        <EditText
                            android:id="@+id/edt_customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/bold"
                            android:textColor="#222222"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:singleLine="true"
                            android:focusable="false"
                            android:cursorVisible="false" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- CardView for review -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Stars -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/img_star_6"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_7"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_8"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_9"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/img_star_10"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star" />
                    </LinearLayout>

                    <!-- Review Title -->
                    <EditText
                        android:id="@+id/edt_title_review_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/bold"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:singleLine="true"
                        android:focusable="false"
                        android:cursorVisible="false" />

                    <!-- Review Content -->
                    <EditText
                        android:id="@+id/edt_review_content_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:scrollHorizontally="false"
                        android:maxLines="10"
                        android:focusable="false"
                        android:cursorVisible="false" />

                    <!-- Reviewer Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F7D4D8">

                        <ImageView
                            android:id="@+id/img_avatar_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_avatar_man" />

                        <EditText
                            android:id="@+id/edt_customer_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/bold"
                            android:textColor="#222222"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:singleLine="true"
                            android:focusable="false"
                            android:cursorVisible="false" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </ScrollView>
</LinearLayout>
