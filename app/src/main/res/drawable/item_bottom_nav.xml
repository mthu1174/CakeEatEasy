<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Icon nền tròn cho trạng thái ACTIVE -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_icon_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-16dp"
        app:backgroundTint="@color/nav_pink"
        app:elevation="0dp"
        app:fabCustomSize="56dp"
        app:tint="@color/white"
        tools:src="@drawable/ic_home_filled"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <!-- Icon cho trạng thái INACTIVE -->
    <ImageView
        android:id="@+id/iv_icon_inactive"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        app:tint="@color/nav_icon_inactive"
        tools:src="@drawable/ic_home_outline"
        tools:visibility="invisible"/>

    <!-- Text label cho trạng thái ACTIVE -->
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textColor="@color/nav_pink"
        android:textSize="12sp"
        tools:text="Home"
        android:visibility="invisible"
    tools:visibility="visible"/>

</RelativeLayout>